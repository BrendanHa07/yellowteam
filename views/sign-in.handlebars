<section class="section">
  <div class="container">
    {{#if error}}
      <div class="alert alert-danger col-md-12" role="alert">
        <strong>{{error}}!</strong>
      </div> 
      {{/if}} 
    <div class="row">

      <div class="col-md-6" id="loginCard">
        <div class="card">
          <div class="card-header">
            <h3>Login</h3>
          </div><!--/.card-header -->
          <div class="card-body">
            <form method="POST" action="/sign-in">
              <div class="form-group">
                <div class="form-group">
                  <label for="email">Email address:</label>
                  <input type="email" name="email" class="form-control form-control-sm" id="email">
                </div>
                <div class="form-group">
                  <label for="pwd">Password:</label>
                  <input type="password" name="password" class="form-control form-control-sm" id="pwd">
                </div>
                <input class="btn btn-primary" type="submit" id="loginSubmit" value="Login">
              </div>
            </form>
          </div><!--/.card-body -->
        </div><!--/.card -->
      </div><!--/.col -->

      <div class="col-md-6" id="registerCard">
        <div class="card">
          <div class="card-header">
            <h3>Register</h3>
          </div><!--/.card-header -->
          <div class="card-body">

            <form id="register-form" method="POST" action="/sign-up">
              <div class="form-group">
                <div class="form-group">
                <label for="first-name" class="form-control-label">Name:</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Name" required>
              </div><!-- /.form-group -->  

              <div class="form-group">
                <label for="email" class="form-control-label">Email:</label>
                <input type="text" class="form-control" name="email" id="email" placeholder="Email" required>
              </div><!-- /.form-group -->

              <div class="form-group">
                <label for="phone" class="form-control-label">Phone Number:</label>
                <input type="text" class="form-control" name="phone" id="phone_number" placeholder="555-555-5555" required>
              </div><!-- /.form-group -->

              <div class="form-group">
                <label for="location" class="form-control-label">Location:</label>
                <input type="text" class="form-control" name="location" id="location" placeholder="Irvine, CA" required>
              </div><!-- /.form-group -->

              <div class="form-group">
                <label for="username" class="form-control-label">Username/Storename:</label>
                <input type="text" class="form-control" name="userName" id="username" placeholder="Username" required>
              </div><!-- /.form-group -->        

              <div class="form-group">
                <label for="password" class="form-control-label">Password:</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
              </div><!-- /.form-group -->
              </div>
              

              <input type="submit" class="btn btn-primary" id="registerSubmit" value="Sign Up">

            </form>

          </div><!--/.card-body -->
        </div><!--/.card -->
      </div><!--/.col -->

    </div><!--/.row -->
  </div><!--/.container -->
</section><!--/.section -->