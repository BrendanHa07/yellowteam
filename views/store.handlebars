    <!-- Logo Placement and info section
================================================== -->

<!-- Wrap the rest of the page in another container to center all the content. -->
<div class="container">
    <!-- Product Grid -->
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 id="productsHeader">Products</h1>
            <hr>
        </div>
    </div>
    <div class="row" id="productContent">
        {{#each userInfo.Products}}
        <div class="col-md-3 col-xs-6 text-center center-block">
            <img class="img-square" src="{{{imageURL}}}" alt="Generic placeholder image" width="200" height="200">
            <h3>{{{productName}}}</h3>
            <p><a class="btn btn-secondary" href="#" role="button">View details &raquo;</a>
            </p>
        </div>
        {{/each}}
        <!-- /.col-lg-3 -->
    </div>
    <!-- /.row -->
</div> 
<!-- /.container -->