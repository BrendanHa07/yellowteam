{{#each productsSearched}}

<div class="container">
<div class="row searched">

  <div class="col-10 bg-light">
	<div class="row">
	<div class="col-5">
	<img src="/uploads/products/{{this.imageURL}}" class="sm-picture img-fluid rounded" alt="Smiley face" height="205" width="305">

	</div>
	<div class="col-7 productText">
	<h5> {{this.productName}} </h5>
	<p class="itemDesc"> {{this.description}}</p>
	</div>
	</div>
  </div>

  <div class="col-2 smallDIV">
	<p>By :  {{this.User.name}}</p>
	<hr class="hr">
	<p>Category : {{this.category}}</p>
	<p>Price : {{this.price}}</p>
	<hr class="hr">
	<a href='/store/{{this.User.userName}}'><button type="button" class="btn btn-primary btn-sm storeButton">Check Store</button></a>
  </div>

</div>

</div>
{{/each}}